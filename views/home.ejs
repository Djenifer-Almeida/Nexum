        <script>
            const scrollIndicator = document.querySelector('.scroll-indicator');
            const scrollIcon = scrollIndicator.querySelector('i');

            scrollIndicator.addEventListener('click', function () {
                if (scrollIcon.classList.contains('bi-chevron-down')) {
                    document.getElementById('fim-da-pagina').scrollIntoView({ behavior: 'smooth' });
                } else {
                    window.scrollTo({ top: 0, behavior: 'smooth' });
                }
            });

            window.addEventListener('scroll', function () {
                const scrollPosition = window.scrollY + window.innerHeight;
                const pageHeight = document.documentElement.scrollHeight;

                if (scrollPosition >= pageHeight - 10) {
                    scrollIcon.classList.remove('bi-chevron-down');
                    scrollIcon.classList.add('bi-chevron-up');
                } else {
                    scrollIcon.classList.remove('bi-chevron-up');
                    scrollIcon.classList.add('bi-chevron-down');
                }
            });
        </script>

