<%- include("partials/header.ejs") %>
    <%- include('partials/navbarlogin.ejs') %>

        <body>

            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
            <div class="login-container">

                <div class="login-box">
                    <div class="login-content">
                        <div class="logo">
                            <img src="/imagem/LogoAmarelo.png" alt="">
                            <span class="system-name">Nexum</span>
                        </div>
                        <h2 class="mt-3">Login</h2>
                        <p>Fa√ßa login utilizando o email e senha fornecidos</p>

                        <% if (error) { %>
                            <div class="error-message">
                                <i class="fas fa-exclamation-circle"></i>
                                <span>
                                    <%= error %>
                                </span>
                            </div>
                            <% } %>
                                <form action='/users/login' method='POST'>

                                    <!-- campo email -->
                                    <div class="input-group">
                                        <i class='bx bx-user'></i>
                                        <label class="form-label" for="login"></label>
                                        <input id="login" name="login" type="text" class="sumir" placeholder="Login"
                                            required>
                                    </div>

                                    <!-- campo senha -->
                                    <div class="input-group password-group">
                                        <i class='bx bx-lock'></i>

                                        <input type="password" name="senha" class="sumir" id="password"
                                            placeholder="Senha" required>
                                        <i class='bx bx-show' id="togglePassword"></i>

                                    </div>
                                    <div>
                                        <select class="form-control" name="tipo">
                                            <option value="advogado">Advogado</option>
                                            <option value="administrador">Administrador</option>

                                        </select>
                                    </div>
                                    <br>
                                    <button type="submit" class="login-btn">Login</button>
                                </form>

                    </div>
                </div>
                <div class="illustration">
                    <img src="/imagem/login2.svg" alt="Illustration">
                </div>
            </div>

            <script>
                //senha
                const togglePassword = document.getElementById('togglePassword');
                const password = document.getElementById('password');

                togglePassword.addEventListener('click', function () {
                    const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
                    password.setAttribute('type', type);
                    this.classList.toggle('bx-show');
                    this.classList.toggle('bx-hide');
                });

                //sumir placeholder
                document.querySelectorAll('.sumir').forEach(function (input) {
                    input.addEventListener('focus', function () {
                        this.setAttribute('data-placeholder', this.getAttribute('placeholder'));
                        this.setAttribute('placeholder', '');
                    });

                    input.addEventListener('blur', function () {
                        this.setAttribute('placeholder', this.getAttribute('data-placeholder'));
                    });
                });


            </script>

            <style>
                body {
                    background-color: #f0f3fc;
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    height: 100vh;
                    background: url(/imagem/fundologin.png);
                }

                .form-check-input:checked {
                    background-color: #F7C873;
                    border-color: #F7C873;
                }

                .form-check-input:focus {
                    border-color: #F7C873;
                    box-shadow: 0 0 0 0.2rem rgba(255, 222, 38, 0.25);
                }

                .logo {
                    display: flex;
                    align-items: center;
                }

                .system-name {
                    font-size: 20px;
                    color: white;
                    font-weight: 600;
                }

                .login-container {
                    display: flex;
                    justify-content: space-between;
                    width: 900px;
                    background-color: #1f2029;
                    border-radius: 15px;
                    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
                    filter: drop-shadow(10px 10px 0px rgb(36, 36, 36))
                }


                .login-box {
                    padding: 40px;
                    width: 50%;
                }

                .login-content {
                    text-align: left;
                }

                .logo img {
                    width: 50px;
                    margin-right: 10px
                }

                h2 {
                    color: white;
                    margin-bottom: 10px;
                }

                p {
                    color: #e0e0e0;
                    margin-bottom: 30px;
                    font-size: 14px;
                }

                .input-group {
                    position: relative;
                    margin-bottom: 20px;
                }

                .input-group i {
                    position: absolute;
                    top: 50%;
                    color: #1f2029;
                    transform: translateY(-50%);
                    font-size: 20px;
                }


                .input-group .bx-user {
                    left: 15px;
                }

                .input-group .bx-lock {
                    left: 15px;
                }

                .input-group .bx-show {
                    right: 15px;
                    cursor: pointer;
                }

                .input-group .bx-hide {
                    right: 15px;
                    cursor: pointer;
                }

                .input-group input {
                    width: 100%;
                    padding: 15px 15px 15px 40px;
                    border: 1px solid #1f2029;
                    border-radius: 8px !important;
                    font-size: 16px;
                    transition: all 0.3s ease-in-out;

                }

                .input-group input:focus {

                    outline: none;
                    transition: border-color 0.5s ease, box-shadow 0.3s ease;

                }

                .options {
                    display: flex;
                    justify-content: space-between;
                    margin-bottom: 20px;
                }

                .options label {
                    color: white;
                }

                .options a {
                    color: white;
                    text-decoration: none;
                    transition: all 0.3s ease;
                }

                .options a:hover {
                    color: #F7C873;
                    text-decoration: none;
                }

                .login-btn {
                    background-color: #F7C873;
                    color: #1f2029;
                    padding: 15px;
                    width: 100%;
                    border: none;
                    border-radius: 8px;
                    font-size: 16px;
                    cursor: pointer;
                    transition: background-color 0.3s ease;
                }

                .login-btn:hover {
                    background-color: #ffb01d;
                }

                .illustration {
                    background: #F7C873;
                    width: 50%;
                    border-top-right-radius: 15px;
                    border-bottom-right-radius: 15px;
                    position: relative;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                }

                .illustration img {
                    width: 80%;
                    filter: drop-shadow(6px 7px 0px rgb(66, 66, 66))
                }

                .error-message {
                    background-color: #e3acb1;
                    color: #bd041c;
                    padding: 10px;
                    border-radius: 5px;
                    margin-bottom: 20px;
                    font-size: 16px;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                }
            </style>